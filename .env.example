# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=Blockchain-Healthcare
DB_USER=romel
DB_PASSWORD=

# Database URL for Prisma (alternative to separate vars)
DATABASE_URL=postgresql://romel:@localhost:5432/Blockchain-Healthcare

# Blockchain Configuration
BLOCKCHAIN_NETWORK=localhost
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545
CHAIN_ID=1337

# Contract Addresses (populated after deployment)
KEY_REGISTRY_ADDRESS=
FACTORY_CONTRACT_ADDRESS=

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Encryption Configuration
# AES-256-GCM requires 32 bytes key
ENCRYPTION_MASTER_KEY=

# Storage Configuration (choose one or both)
STORAGE_TYPE=ipfs
# STORAGE_TYPE=s3
# STORAGE_TYPE=dual

# IPFS Configuration
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http

# S3 Configuration (if using S3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
S3_ENDPOINT=

# Security Settings
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# FHIR Configuration
FHIR_VERSION=R4
FHIR_STRICT_VALIDATION=true

# Emergency Access Settings
EMERGENCY_ACCESS_DURATION=3600
EMERGENCY_JUSTIFICATION_REQUIRED=true

# Feature Flags
ENABLE_ACCESS_LOGGING=true
ENABLE_FHIR_VALIDATION=true
ENABLE_RATE_LIMITING=true
